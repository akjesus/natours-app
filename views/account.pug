extends base

mixin navItem(link, icon, label, active)
    li(class = `${active? 'side-nav--active': ''}`)
        a(href=`${link}`)
            svg
                use(xlink:href=`/img/icons.svg#icon-${icon}`)
            | #{label}

block content
    main.main
        .user-view
            nav.user-view__menu
                ul.side-nav
                    +navItem('#', 'settings', 'Settings', true)
                    +navItem('/my-tours', 'briefcase', 'My Bookings', false)
                    +navItem('#', 'star', 'My Reviews', false)
                    +navItem('#', 'credit-card', 'Billing', false)                    
                    -if (user.role==='admin')

                        .admin-nav
                            h5.admin-nav__heading Admin
                            ul.side-nav
                                +navItem('#', 'map', 'Manage Tours', false)
                                +navItem('#', 'users', 'Manage Users', false)
                                +navItem('#', 'star', 'Manage Reviews', false)
                                +navItem('/bookings', 'briefcase', 'Manage Bookings', false)
            .user-view__content
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Your account settings
                    form.form.form-user-data
                        .form__group
                            label.form__label(for='name') Name
                            input#name.form__input(type='text', value=`${user.name}`, required, name = 'name')
                        .form__group.ma-bt-md
                            label.form__label(for='email') Email address
                            input#email.form__input(type='email', value=`${user.email}`, required name = 'email')
                        .form__group.form__photo-upload
                            img.form__user-photo(src=`/img/users/${user.photo}`, alt='User photo', name = 'photo')
                            input.form__upload(type = 'file', allowed = 'image/*', id = 'photo', name = 'photo')
                            label.btn-text(for = 'photo') Choose new photo
                        .form__group.right
                            button.btn.btn--small.btn--green Update Account
                .line &nbsp;
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Password change
                    form.form.form-user-settings
                        .form__group
                            label.form__label(for='password-current') Current password
                            input#password-current.form__input(type='password', placeholder='••••••••', required, minlength='8', name = 'password-current')
                        .form__group
                            label.form__label(for='password') New password
                            input#password.form__input(type='password', placeholder='••••••••', required, minlength='8', name = 'password')
                        .form__group.ma-bt-lg
                            label.form__label(for='password-confirm') Confirm password
                            input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8', name = 'password-confirm')
                        .form__group.right
                            button.btn.btn--small.btn--green.btn--update Change password
