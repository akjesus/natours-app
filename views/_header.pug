header.header
    nav.nav.nav--tours
        a.nav__el(href= '/') All Tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
    if user
        a.nav__el.nav__el--logout Logout
        a.nav__el(href= '/me')
            img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
            span=user.name.split(' ')[0]
    else
        a.nav__el(href= '/login')
            button.nav__el Login
        a.nav__el(href='/signup') 
            button.nav__el.nav__el--cta Sign Up